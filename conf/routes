# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /demo                       controllers.Application.demo()
GET     /dashboard                  controllers.Application.dashboard()
GET     /javascript                 controllers.Application.javascript()
GET     /javascriptRoutes           controllers.Application.javascriptRoutes()

#Wizard
GET     /wizard/:step               controllers.Wizard.step(step: Int)
POST    /wizard/:step               controllers.Wizard.submit(step: Int)

#Job monitoring
GET    /monitor                     controllers.Console.monitor(git, number: Int, offering)
GET    /systemout/:name             controllers.Console.printOut(name)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /fonts/*file                controllers.Assets.at(path="/public/fonts", file)
GET     /images/*file               controllers.Assets.at(path="/public/images", file)