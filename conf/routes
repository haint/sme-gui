# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /signin                     controllers.Application.signin()

GET     /test                       controllers.Application.testSoc()
GET     /socket                     controllers.Application.socket()

#VM
GET     /vm                         controllers.vm.VirtualMachine.list()
GET     /vm/new                     controllers.vm.VirtualMachine.create()
GET     /vm/ajax                    controllers.vm.VirtualMachine.ajax()
GET     /vm/detail/:id              controllers.vm.VirtualMachine.detail(id)

# Demo page
GET     /demo                       controllers.Demo.demo()
GET     /dashboard                  controllers.Demo.dashboard()
GET     /javascript                 controllers.Demo.javascript()
GET     /widget                     controllers.Demo.widget()
GET     /javascriptRoutes           controllers.Demo.javascriptRoutes()

#Job monitoring
GET    /monitor                     controllers.Console.monitor(git, number: Int, offering)
GET    /systemout/:name             controllers.Console.printOut(name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /fonts/*file                controllers.Assets.at(path="/public/fonts", file)
